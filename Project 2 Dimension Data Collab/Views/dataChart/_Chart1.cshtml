
<div>
    <h2>Gender balance</h2>
    <canvas id="gender"></canvas>
</div>

<script>

    var can = document.getElementById("gender");
    var male = @ViewBag.male;
    var female = @ViewBag.female;

    var genderC = new Chart(can, {
        type: "doughnut",
        data: {
            labels: ["Male", "Female"],
            datasets: [{
                data: [male, female],
                backgroundColor: ["#4D83E9", "#BC27D6"],
                borderColor: ["#6B1A78", "#6B1A78"]
            }]
        }
    });


</script>
